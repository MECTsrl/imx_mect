// STMP378x ROM command script to load and run Linux kernel
options {
	driveTag = 0x00;
	flags = 0x01;
}
sources {
	power_prep="./power_prep/power_prep";
	sdram_prep="./boot_prep/boot_prep";
	linux_prep="./linux_prep/output-target/linux_prep";
	zImage="/home/imx28/20170308/ltib/rootfs/boot/zImage";
}

section (0) {

	//----------------------------------------------------------
	// Power Supply initialization
	//----------------------------------------------------------
	load power_prep;
	call power_prep;

	//----------------------------------------------------------
	// SDRAM initialization
	//----------------------------------------------------------
	load sdram_prep;
	call sdram_prep;

	//----------------------------------------------------------
	// Prepare to boot Linux
	//----------------------------------------------------------
	load linux_prep;
	call linux_prep;

	//----------------------------------------------------------
	//  Load ans start Linux kernel
	//----------------------------------------------------------
	load zImage > 0x40008000;
	jump linux_prep;
}
