config MECT_PRODUCT
	string
	default "MECT TPAC1006/TP1057 320x240 panel" 	if MECT_TPAC1006_320x240
	default "MECT TPAC1006/TP1057HR 640x480 panel" 	if MECT_TPAC1006_640x480
	default "MECT TPAC1007 480x272 panel"		if MECT_TPAC1007_480x272
	default "MECT TPAC1008/TP1070 800x480 panel"	if MECT_TPAC1008_800x480
	default "MECT ATN01/P04 480x272 panel"		if MECT_ATN01
	default "MECT ELE01 480x272 panel"		if MECT_ELE01
	default "MECT VAL01 480x272 panel"		if MECT_VAL01
	default "MECT ACQUATI 320x240 panel"		if MECT_ACQUATI
	default "MECT Unknown product"

config MECT_GPIO_POWERFAIL
	bool "MECT powerfail management gpio"
	depends on GENERIC_GPIO
	depends on ! KEYBOARD_GPIO
	help
	  MECT powerfail input management (incomatible with keyboard gpio input).

config MECT_RAISING_PWRFAIL
	bool "MECT powerfail interrupt is raising edge"
	default n if MECT_ATN01 || MECT_TPAC1007_480x272 || MECT_VAL01 || MECT_ELE01
	default y if MECT_TPAC1006_320x240 || MECT_TPAC1006_640x480 || MECT_TPAC1008_800x480  || MECT_ACQUATI

