choice
	prompt "Select i.MXS board type"

config MACH_MX28EVK
	bool "Freescale MX28 EVK board"
	depends on ARCH_MX28
	select USB_ARCH_HAS_EHCI

endchoice

config VECTORS_PHY_ADDR
	int "vectors address"
	default 0
	help
	  This config set vectors table is located which physical address

config MXS_TIMER_WITH_MACH
	bool "System Timer support Compare Match interrupt"
	default y

config MEM_mDDR
	bool "Memory type is mDDR"
	depends on ARCH_MX28
	help
	  Say Y to select mDDR memory

config MECT_CUSTOMIZATION
	bool "Mect customization for i.mx28 evk board"
	depends on MACH_MX28EVK
	default y
	select MXS_AUART1_DEVICE_ENABLE
	select MXS_AUART2_DEVICE_ENABLE
	select MXS_AUART3_DEVICE_ENABLE
	help
	  Say Y to select the Mect modification (can, rs485) 

choice
	prompt "Select MECT board type"

config MECT_TPAC1006_320x240
	bool "MECT TPAC1006/TP1057 320x240 panel"
	depends on MECT_CUSTOMIZATION
	select FB_MXS_LCD_HH057
	select LOGO_MECT_320x240
	select RTC_DRV_DS1390
	select SPI_MXS
	help
	  Say Y to select the Mect panel TPAC1006_320x240 (modification: display, logo...) 

