# Target TPLC100

TPLC100%: MECT_SUFFIX := TPLC100
TPLC100%: MECT_TGTDIR := $(MECT_IMGDIR)/TPLC100_ms$(MECT_BUILD_RELEASE)
TPLC100%: MECT_MFGDIR = $(MECT_TGTDIR)/$(shell basename $(MECT_TGTDIR) | sed 's/\./_/g')
TPLC100%: MECT_MFGZIP = $(MECT_MFGDIR)/../$(shell basename $(MECT_MFGDIR)).zip
TPLC100%: MECT_BOOTDIR = $(MECT_TGTDIR)/boot
TPLC100%: MECT_RFSDIR = $(MECT_TGTDIR)/rootfs
TPLC100%: MECT_LFSDIR = $(MECT_TGTDIR)/localfs
TPLC100%: MECT_KERNELRPM = $(subst /kernel-,/kernel-rfs-$(MECT_TARGET_PREFIX)$(MECT_SUFFIX)-,$(MECT_LTIB_KERNEL_RPM))
TPLC100%: MECT_KERNEL_TARGET_CONF := kernel-2.6.35-imx28-tpac1007_480x272.config

.PHONY: TPLC100
TPLC100: TPLC100_mfg

.PHONY: TPLC100_boot
TPLC100_boot:
	$(MAKE) MECT_BOOTDIR='$(MECT_BOOTDIR)' MECT_SUFFIX='$(MECT_SUFFIX)' MECT_KERNEL_TARGET_CONF='$(MECT_KERNEL_TARGET_CONF)' MECT_KERNELRPM='$(MECT_KERNELRPM)' target_boot

.PHONY: TPLC100_rfs
TPLC100_rfs:
	test -n '$(MECT_BUILD_TARGET_TPLC100)'
	$(MAKE) BUILD_TARGET='$(MECT_BUILD_TARGET_TPLC100)' MECT_RFSDIR='$(MECT_RFSDIR)' MECT_SUFFIX='$(MECT_SUFFIX)' MECT_KERNEL_TARGET_CONF='$(MECT_KERNEL_TARGET_CONF)' MECT_KERNELRPM='$(MECT_KERNELRPM)' MECT_RFSDIR='$(MECT_RFSDIR)' target_rfs

.PHONY: TPLC100_lfs
TPLC100_lfs:
	$(MAKE) MECT_LFSDIR='$(MECT_LFSDIR)' target_lfs

.PHONY: TPLC100_mfg
TPLC100_mfg: TPLC100_boot TPLC100_rfs TPLC100_lfs
	$(MAKE) MECT_MFGDIR='$(MECT_MFGDIR)' MECT_RFSDIR='$(MECT_RFSDIR)' MECT_LFSDIR='$(MECT_LFSDIR)' MECT_TGTDIR='$(MECT_TGTDIR)' MECT_BOOTDIR='$(MECT_BOOTDIR)' MECT_MFGZIP='$(MECT_MFGZIP)' target_mfg
