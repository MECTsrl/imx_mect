# Target TPLC150

TPLC150%: MECT_SUFFIX := TPLC150
TPLC150%: MECT_TGTDIR := $(MECT_IMGDIR)/TPLC150_ms$(MECT_BUILD_RELEASE)
TPLC150%: MECT_MFGDIR = $(MECT_TGTDIR)/$(shell basename $(MECT_TGTDIR) | sed 's/\./_/g')
TPLC150%: MECT_MFGZIP = $(MECT_MFGDIR)/../$(shell basename $(MECT_MFGDIR)).zip
TPLC150%: MECT_BOOTDIR = $(MECT_TGTDIR)/boot
TPLC150%: MECT_RFSDIR = $(MECT_TGTDIR)/rootfs
TPLC150%: MECT_LFSDIR = $(MECT_TGTDIR)/localfs
TPLC150%: MECT_KERNELRPM = $(subst /kernel-,/kernel-rfs-$(MECT_TARGET_PREFIX)$(MECT_SUFFIX)-,$(MECT_LTIB_KERNEL_RPM))
TPLC150%: MECT_KERNEL_TARGET_CONF := kernel-2.6.35-imx28-tpac1007_480x272.config

.PHONY: TPLC150
TPLC150: TPLC150_mfg

.PHONY: TPLC150_boot
TPLC150_boot:
	$(MAKE) MECT_BOOTDIR='$(MECT_BOOTDIR)' MECT_SUFFIX='$(MECT_SUFFIX)' MECT_KERNEL_TARGET_CONF='$(MECT_KERNEL_TARGET_CONF)' MECT_KERNELRPM='$(MECT_KERNELRPM)' target_boot

.PHONY: TPLC150_rfs
TPLC150_rfs:
	test -n '$(MECT_BUILD_TARGET_TPLC150)'
	$(MAKE) BUILD_TARGET='$(MECT_BUILD_TARGET_TPLC150)' MECT_RFSDIR='$(MECT_RFSDIR)' MECT_SUFFIX='$(MECT_SUFFIX)' MECT_KERNEL_TARGET_CONF='$(MECT_KERNEL_TARGET_CONF)' MECT_KERNELRPM='$(MECT_KERNELRPM)' MECT_RFSDIR='$(MECT_RFSDIR)' target_rfs

.PHONY: TPLC150_lfs
TPLC150_lfs:
	$(MAKE) MECT_LFSDIR='$(MECT_LFSDIR)' target_lfs

.PHONY: TPLC150_mfg
TPLC150_mfg: TPLC150_boot TPLC150_rfs TPLC150_lfs
	$(MAKE) MECT_MFGDIR='$(MECT_MFGDIR)' MECT_RFSDIR='$(MECT_RFSDIR)' MECT_LFSDIR='$(MECT_LFSDIR)' MECT_TGTDIR='$(MECT_TGTDIR)' MECT_BOOTDIR='$(MECT_BOOTDIR)' MECT_MFGZIP='$(MECT_MFGZIP)' target_mfg
